{
	"name": "linter-xo",
	"description": "Linter for XO",
	"version": "3.1.2",
	"author": {
		"name": "Spencer Snyder",
		"email": "sasnyde2@gmail.com",
		"url": "https://spencersnyder.io"
	},
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:javascriptreact",
		"onLanguage:typescript",
		"onLanguage:typescriptreact",
		"onCommand:xo.fix"
	],
	"bugs": {
		"url": "https://github.com/SamVerschueren/vscode-linter-xo/issues"
	},
	"categories": [
		"Linters",
		"Formatters"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "XO",
			"properties": {
				"xo.enable": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Control whether xo is enabled or not."
				},
				"xo.options": {
					"type": "object",
					"default": {},
					"description": "The xo options object to provide args to the xo command."
				},
				"xo.format.enable": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "Enable 'xo --fix' as formatter"
				},
				"xo.overrideSeverity": {
					"type": "string",
					"default": "off",
					"enum": [
						"off",
						"info",
						"warn",
						"error"
					],
					"description": "Override the severity of found issues."
				},
				"xo.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the XO server."
				}
			}
		},
		"commands": [
			{
				"title": "Fix all auto-fixable problems",
				"category": "XO",
				"command": "xo.fix"
			}
		]
	},
	"dependencies": {
		"load-json-file": "^6.2.0",
		"vscode-languageclient": "^7.0.0",
		"vscode-languageserver": "^7.0.0",
		"vscode-languageserver-textdocument": "^1.0.1",
		"vscode-uri": "^3.0.2"
	},
	"devDependencies": {
		"@commitlint/cli": "13.1.0",
		"@commitlint/config-conventional": "13.1.0",
		"@types/vscode": "^1.58.1",
		"esbuild": "^0.12.18",
		"fixpack": "^4.0.0",
		"husky": "^7.0.1",
		"lint-staged": "11.1.1",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"xo": "^0.43.0"
	},
	"displayName": "XO",
	"engines": {
		"vscode": "^1.58.2",
		"node": ">12"
	},
	"homepage": "https://github.com/xojs/xo",
	"icon": "icon.png",
	"keywords": [
		"code style",
		"eslint",
		"formatter",
		"linter",
		"xo"
	],
	"license": "MIT",
	"main": "./dist/client.js",
	"publisher": "spence-s",
	"repository": {
		"type": "git",
		"url": "https://github.com/SamVerschueren/vscode-linter-xo"
	},
	"scripts": {
		"build": "npm run clean && npm run build:client && npm run build:server",
		"build:client": "esbuild ./client/extension.js --bundle --outfile=dist/client.js --external:vscode --format=cjs --platform=node --minify",
		"build:server": "esbuild ./server/server.js --bundle --outfile=dist/server.js --external:vscode --format=cjs --platform=node --minify",
		"clean": "rimraf dist",
		"lint": "xo && npm run lint:md",
		"lint:md": "prettier --parser markdown '**/*.md' --check",
		"prepare": "husky install",
		"test": "npm run lint && npm run build",
		"vscode:prepublish": "npm run build"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"unicorn/prefer-module": "off",
			"node/no-unsupported-features/es-syntax": "off",
			"node/no-unsupported-features/es-builtins": "off",
			"unicorn/no-array-for-each": "off",
			"unicorn/no-array-callback-reference": "off",
			"unicorn/prevent-abbreviations": "off",
			"import/extensions": "off",
			"capitalized-comments": "off",
			"no-warning-comments": "off"
		}
	}
}
