{
  "name": "linter-xo",
  "version": "0.1.2",
  "description": "Linter for XO",
  "publisher": "samverschueren",
  "engines": {
    "vscode": "*"
  },
  "dependencies": {
    "vscode-languageworker": "*"
  },
  "devDependencies": {
    "typescript": "^1.6.2"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "XO configuration",
      "properties": {
        "xo.enable": {
          "type": "boolean",
          "default": false,
          "description": "Control whether xo is enabled or not."
        },
        "xo.options": {
          "type": "object",
          "default": {},
          "description": "The xo options object to provide args to the xo command."
        }
      }
    },
    "languageWorkers": {
      "activate": [
        "onLanguage:javascript",
        "onLanguage:javascriptreact"
      ],
      "executable": {
        "run": {
          "nodeModule": "out/extension.js"
        },
        "debug": {
          "nodeModule": "out/extension.js",
          "execArgv": [
            "--nolazy",
            "--debug=5871"
          ]
        }
      },
      "watchFiles": [
        "**/*.js"
      ],
      "settings": "xo"
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc",
    "compile": "tsc -watch -p ./"
  }
}
