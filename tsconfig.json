{
	"compilerOptions": {
		"target": "ES2021",
		"module": "Node16",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2021"],
		"strict": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules"],
	"include": ["server/**/*.ts", "client/**/*.ts"]
}
