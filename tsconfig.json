	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2021"],
		"strict": true,
		"noEmit": true
	},
	"exclude": ["node_modules"],
	"include": ["server/**/*.ts", "client/**/*.ts"]
}
